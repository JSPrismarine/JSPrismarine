{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./",
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "esnext"
        ],
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/server.ts"
    ],
    "typeRoots": [
        "node_modules/@types",
        "./src/types"
    ]
}
