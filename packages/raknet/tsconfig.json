{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "baseUrl": ".",
        "composite": false,
        "paths": { "@": ["src/index.ts"] },
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types", "./src/@types", "./dist/index.d.ts"]
    },
    "exclude": ["node_modules", "coverage", "dist", "src/**/*.test.*"],
    "include": ["src", "./src/@types"]
}
