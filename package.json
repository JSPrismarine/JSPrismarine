{
    "name": "@jsprismarine/monorepo",
    "version": "0.0.0",
    "description": "Dedicated Minecraft Bedrock Edition server written in TypeScript",
    "prettier": "@nordcom/prettier",
    "sideEffects": false,
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "bin": {
        "prismarine": "packages/server/dist/Server.es.js"
    },
    "packageManager": "pnpm@8.15.6",
    "engines": {
        "node": ">=21.0.0"
    },
    "scripts": {
        "prepare": "husky install",
        "start": "node ./packages/server/dist/Server.es.js --warning --circular",
        "dev": "pnpm --filter ./packages/server run dev",
        "clean": "turbo run clean",
        "build": "turbo run build",
        "build:docs": "typedoc",
        "server:build": "turbo run build --filter=@jsprismarine/server",
        "test": "vitest run --coverage",
        "lint": "concurrently pnpm:lint:*",
        "lint:eslint": "eslint packages/**/src/**/*.ts",
        "lint:prettier": "prettier packages/**/src/**/*.* --check",
        "format": "concurrently pnpm:format:*",
        "format:eslint": "eslint  --fix packages/**/src/**/*.ts",
        "format:prettier": "prettier --write packages/**/src/**/*.*",
        "version": "changeset version",
        "postversion": "pnpm install",
        "version:unstable": "changeset version --snapshot unstable",
        "release": "changeset publish",
        "release:unstable": "changeset publish --snapshot --no-git-tag --tag unstable",
        "changeset": "changeset"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JSPrismarine/JSPrismarine.git"
    },
    "keywords": [
        "javascript",
        "typescript",
        "minecraft",
        "mcpe",
        "bedrock",
        "be"
    ],
    "author": "JSPrismarine",
    "contributors": [
        {
            "name": "Filiph Siitam Sandstr√∂m",
            "email": "filiph@nordcom.io",
            "url": "https://nordcom.io/"
        },
        {
            "name": "Enrico Angelon",
            "email": "enricoangelon.ea@gmail.com",
            "url": "https://enricoangelon.it/"
        }
    ],
    "license": "MPL-2.0",
    "bugs": {
        "url": "https://github.com/JSPrismarine/JSPrismarine/issues"
    },
    "homepage": "https://github.com/JSPrismarine/JSPrismarine#readme",
    "devDependencies": {
        "@changesets/changelog-github": "0.5.0",
        "@changesets/cli": "2.27.1",
        "@changesets/types": "6.0.0",
        "@nordcom/prettier": "0.1.1",
        "@droppedcode/typedoc-plugin-relative-includes": "1.0.5",
        "@types/heap": "0.2.34",
        "@types/node": "20.12.5",
        "@types/unzipper": "0.10.9",
        "@typescript-eslint/eslint-plugin": "7.5.0",
        "@typescript-eslint/parser": "7.5.0",
        "@vitest/coverage-v8": "1.4.0",
        "concurrently": "8.2.2",
        "cross-env": "7.0.3",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-jsdoc": "48.2.3",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-unused-imports": "3.1.0",
        "eslint": "8.57.0",
        "esmock": "2.6.4",
        "glob": "10.3.12",
        "husky": "9.0.11",
        "lint-staged": "15.2.2",
        "nodemon": "3.1.0",
        "prettier-eslint": "16.3.0",
        "prettier": "3.2.5",
        "turbo": "1.13.2",
        "typedoc-material-theme": "1.0.2",
        "typedoc-plugin-extras": "3.0.0",
        "ts-mockito": "2.6.1",
        "typedoc-plugin-missing-exports": "2.2.0",
        "typedoc-plugin-rename-defaults": "0.7.0",
        "typedoc": "0.25.12",
        "typescript": "5.4.4",
        "vite-plugin-dts": "3.8.1",
        "vite": "5.2.8",
        "vitest": "1.4.0"
    },
    "dependencies": {
        "@jsprismarine/bedrock-data": "1.20.70",
        "@jsprismarine/brigadier": "workspace:*",
        "@jsprismarine/jsbinaryutils": "5.5.3",
        "evt": "2.5.7",
        "fast-jwt": "4.0.0",
        "fflate": "0.8.2",
        "graceful-fs": "4.2.11",
        "heap": "0.2.7",
        "live-plugin-manager": "0.19.0",
        "node-fetch": "3.3.2",
        "node-machine-id": "1.1.12",
        "semver": "7.6.0",
        "simplex-noise": "4.0.1",
        "strip-json-comments": "5.0.1",
        "unzipper": "0.10.14",
        "winston": "3.13.0",
        "yaml": "2.4.1"
    }
}
