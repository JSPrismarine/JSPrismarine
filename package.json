{
    "name": "@jsprismarine/monorepo",
    "description": "Dedicated Minecraft Bedrock Edition server written in TypeScript",
    "funding": "https://github.com/sponsors/JSPrismarine",
    "workspaces": {
        "packages": [
            "packages/**"
        ]
    },
    "bin": {
        "prismarine": "packages/server/dist/Server.js"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": "^7.0.0"
    },
    "scripts": {
        "start": "node ./packages/server/dist/Server.js --warning --circular",
        "start:dev": "cross-env NODE_ENV=development JSP_DIR=jsp node ./packages/server/dist/Server.js",
        "dev": "nodemon --quiet --delay 0.25 --no-stdin --watch \"./packages\" --ignore \"**/*.d.ts\" --ignore \"**/*.js\" --ignore \"**/*.md\" -e ts,js,json --exec \"npm run server:build && npm run start:dev\"",
        "dev:no-watch": "cross-env NODE_ENV=development JSP_DIR=jsp npm run server:server && npm run start:dev",
        "build": "npm-run-all build:*",
        "build:source": "lerna run build",
        "build:docs": "typedoc",
        "server:build": "lerna run --scope=@jsprismarine/server build",
        "bootstrap": "lerna bootstrap",
        "package": "pkg package.json --out-path ./builds/",
        "watch:test": "jest --passWithNoTests --watch --detectOpenHandles --runInBand",
        "test": "npm-run-all test:*",
        "test:jest": "jest --passWithNoTests --testLocationInResults --silent --detectOpenHandles --forceExit",
        "test:eslint": "xo packages/**/src/ --ignore '*.test.*'",
        "test:prettier": "prettier --config .prettierrc packages/**/src/**/*.* --check && prettier --config .prettierrc packages/**/src/**/*.* --check",
        "format:eslint": "xo --fix packages/**/src/",
        "format:prettier": "prettier --config .prettierrc packages/**/src/**/*.* --write && prettier --config .prettierrc packages/**/src/**/*.* --write",
        "coveralls": "jest --coverage --forceExit --testLocationInResults --silent && cat ./coverage/lcov.info | coveralls"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JSPrismarine/JSPrismarine.git"
    },
    "xo": {
        "space": 4,
        "prettier": true,
        "rules": {
            "sort-imports": [
                "error",
                {
                    "ignoreCase": false,
                    "ignoreDeclarationSort": false,
                    "ignoreMemberSort": false,
                    "memberSyntaxSortOrder": [
                        "none",
                        "all",
                        "multiple",
                        "single"
                    ],
                    "allowSeparatedGroups": false
                }
            ],
            "unicorn/filename-case": 0,
            "unicorn/prevent-abbreviations": 0,
            "unicorn/no-process-exit": 0,
            "unicorn/explicit-length-check": 0,
            "unicorn/no-abusive-eslint-disable": 0,
            "unicorn/prefer-math-trunc": 0,
            "unicorn/prefer-ternary": 0,
            "unicorn/better-regex": 0,
            "unicorn/escape-case": 0,
            "unicorn/catch-error-name": 0,
            "unicorn/prefer-spread": 0,
            "unicorn/prefer-date-now": 1,
            "unicorn/no-lonely-if": 1,
            "unicorn/no-array-reduce": 0,
            "unicorn/no-array-for-each": 0,
            "unicorn/no-array-push-push": 1,
            "unicorn/no-new-array": 1,
            "unicorn/prefer-switch": 1,
            "unicorn/numeric-separators-style": 0,
            "unicorn/prefer-module": 1,
            "unicorn/prefer-array-flat-map": 1,
            "unicorn/prefer-node-protocol": 0,
            "import/no-named-as-default": 0,
            "import/order": 0,
            "import/no-cycle": 1,
            "promise/prefer-await-to-then": 1,
            "@typescript-eslint/member-ordering": 0,
            "@typescript-eslint/ban-types": 0,
            "@typescript-eslint/no-implicit-any-catch": 0,
            "@typescript-eslint/no-useless-constructor": 0,
            "@typescript-eslint/restrict-template-expressions": 0,
            "@typescript-eslint/no-var-requires": 0,
            "@typescript-eslint/no-extraneous-class": 0,
            "@typescript-eslint/no-empty-function": 0,
            "@typescript-eslint/prefer-for-of": 1,
            "@typescript-eslint/no-base-to-string": 0,
            "@typescript-eslint/consistent-type-assertions": 0,
            "@typescript-eslint/prefer-nullish-coalescing": 1,
            "@typescript-eslint/prefer-literal-enum-member": 0,
            "@typescript-eslint/restrict-plus-operands": 0,
            "@typescript-eslint/prefer-readonly": 0,
            "@typescript-eslint/prefer-ts-expect-error": 0,
            "@typescript-eslint/lines-between-class-members": 0,
            "@typescript-eslint/no-confusing-void-expression": 0,
            "@typescript-eslint/non-nullable-type-assertion-style": 1,
            "@typescript-eslint/explicit-member-accessibility": 1,
            "@typescript-eslint/no-unnecessary-type-assertion": 0,
            "@typescript-eslint/no-array-constructor": 0,
            "@typescript-eslint/no-inferrable-types": 0,
            "@typescript-eslint/no-unsafe-argument": 1,
            "@typescript-eslint/no-unused-vars": 1,
            "@typescript-eslint/no-non-null-asserted-optional-chain": 1,
            "@typescript-eslint/no-non-null-assertion": 0,
            "@typescript-eslint/no-unsafe-member-access": 1,
            "@typescript-eslint/no-redeclare": 1,
            "@typescript-eslint/no-unsafe-call": 1,
            "@typescript-eslint/no-unsafe-return": 1,
            "@typescript-eslint/no-unsafe-assignment": 1,
            "@typescript-eslint/no-require-imports": 1,
            "no-redeclare": 1,
            "no-inferrable-types": 0,
            "prefer-destructuring": 0,
            "new-cap": 0,
            "one-var": 0,
            "no-sequences": 0,
            "no-multi-assign": 1,
            "padding-line-between-statements": 0,
            "prefer-exponentiation-operator": 0,
            "no-return-assign": 0,
            "no-control-regex": 0,
            "no-async-promise-executor": 0,
            "no-negated-condition": 0,
            "no-promise-executor-return": 0,
            "no-case-declarations": 0,
            "no-fallthrough": 0,
            "no-await-in-loop": 0,
            "max-depth": 0,
            "capitalized-comments": 0,
            "no-lonely-if": 0,
            "guard-for-in": 0
        }
    },
    "keywords": [
        "javascript",
        "typescript",
        "minecraft",
        "mcpe",
        "bedrock",
        "be"
    ],
    "author": "JSPrismarine",
    "license": "MPL-2.0",
    "bugs": {
        "url": "https://github.com/JSPrismarine/JSPrismarine/issues"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run build && npm run test",
            "post-checkout": "yarnhook && lerna bootstrap",
            "post-merge": "yarnhook && lerna bootstrap",
            "post-rewrite": "yarnhook && lerna bootstrap"
        }
    },
    "pkg": {
        "scripts": [
            "./packages/server/dist/**/*.js",
            "./packages/server/node_modules/@jsprismarine/prismarine/node_modules/leveldown/**/*.js",
            "./packages/server/node_modules/@jsprismarine/prismarine/dist/**/*.js"
        ],
        "assets": [
            "./packages/server/node_modules/@jsprismarine/prismarine/node_modules/@jsprismarine/bedrock-data/resources/biome_definitions.nbt",
            "./packages/server/node_modules/@jsprismarine/prismarine/node_modules/@jsprismarine/bedrock-data/resources/entity_identifiers.nbt",
            "./packages/server/node_modules/@jsprismarine/prismarine/node_modules/@jsprismarine/bedrock-data/resources/canonical_block_states.nbt",
            "./packages/server/node_modules/@jsprismarine/prismarine/node_modules/@jsprismarine/bedrock-data/resources/r12_to_current_block_map.bin",
            "./packages/server/node_modules/@jsprismarine/prismarine/node_modules/@jsprismarine/bedrock-data/block_states.dat",
            "./node_modules/@jsprismarine/bedrock-data/resources/biome_definitions.nbt",
            "./node_modules/@jsprismarine/bedrock-data/resources/entity_identifiers.nbt",
            "./node_modules/@jsprismarine/bedrock-data/resources/canonical_block_states.nbt",
            "./node_modules/@jsprismarine/bedrock-data/resources/r12_to_current_block_map.bin",
            "./node_modules/@jsprismarine/bedrock-data/block_states.dat"
        ]
    },
    "homepage": "https://github.com/JSPrismarine/JSPrismarine#readme",
    "devDependencies": {
        "@strictsoftware/typedoc-plugin-monorepo": "0.4.2",
        "@types/jest": "26.0.23",
        "@types/node": "14.17.3",
        "coveralls": "3.1.1",
        "cross-env": "7.0.3",
        "husky": "4.3.8",
        "jest": "26.6.3",
        "lerna": "4.0.0",
        "nodemon": "2.0.9",
        "npm-run-all": "4.1.5",
        "prettier": "2.2.1",
        "ts-jest": "26.5.6",
        "ts-node": "10.0.0",
        "typedoc": "0.20.36",
        "typescript": "4.2.4",
        "xo": "0.40.3",
        "yarnhook": "0.5.1"
    },
    "dependencies": {
        "@jsprismarine/bedrock-data": "1.16.210-c",
        "@jsprismarine/brigadier": "0.2.0-rc.1",
        "@jsprismarine/jsbinaryutils": "2.1.8",
        "@types/d3-interpolate": "2.0.0",
        "@types/git-rev-sync": "2.0.0",
        "@types/node-fetch": "2.5.10",
        "@types/set-interval-async": "1.0.0",
        "@types/unzipper": "0.10.3",
        "d3-interpolate": "2.0.1",
        "evt": "1.9.13",
        "fast-jwt": "1.2.0",
        "git-rev-sync": "3.0.1",
        "graceful-fs": "4.2.6",
        "live-plugin-manager": "0.15.1",
        "node-fetch": "2.6.1",
        "node-machine-id": "1.1.12",
        "prismarine-chunk": "1.22.0",
        "prismarine-provider-anvil": "2.3.2",
        "semver": "7.3.4",
        "set-interval-async": "2.0.3",
        "simplex-noise": "2.4.0",
        "strip-json-comments": "3.1.1",
        "unzipper": "0.10.11",
        "winston": "3.3.3",
        "yaml": "2.0.0-3"
    }
}
